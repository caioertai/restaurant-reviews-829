<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>Rating:</strong>
  <%= @restaurant.rating %>
</p>

<h2>Reviews</h2>
<!-- @restaurant.reviews -->
<%= link_to "Review #{@restaurant.name} yourself!", new_restaurant_review_path(@restaurant), class: "btn btn-secondary btn-sm" %>
<hr>

<% @restaurant.reviews.order(created_at: :desc).each do |review| %>
  <p>
    <%= review.content %>
    <br>
    <%= link_to "Delete", review_path(review), method: :delete, data: { confirm: "Are you sure?" } %>
  </p>
  <hr>
<% end %>

<%= link_to 'Edit', edit_restaurant_path(@restaurant) %> |
<%= link_to 'Back', restaurants_path %>
